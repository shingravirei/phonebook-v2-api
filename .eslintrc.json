{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": 0,
        "semi": "off",
        "no-unused-vars": "warn",
        "arrow-body-style": "warn",
        "linebreak-style": [
            "off",
            "windows"
        ],
        "indent": [
            "error",
            4
        ],
        "comma-dangle": "off",
        "arrow-parens": "off",
        "consistent-return": "warn"
    }
}